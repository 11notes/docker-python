#/bin/sh
  mkdir -p /tmp/.whl

  pip wheel \
    --wheel-dir /tmp/.whl \
    $@

  for WHL in $@; do
    if echo "${WHL}" | grep -q "=="; then
      WHL=$(echo "${WHL}" | awk -F "==" '{print $1}')
    fi
    find /tmp/.whl/* -name "*${WHL}*.whl" -exec auditwheel-build "{}" ";"
    find /tmp/.whl/* -name "*${WHL}*none-any.whl" -exec cp "{}" /.dist ";"
  done

  find /.dist -name "*.whl" -exec auditwheel show "{}" ";"